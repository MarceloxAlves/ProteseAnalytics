<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.JogoActivity"
    android:background="@color/colorVerde3">
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_jogo_2"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fase_name"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Stage: May"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/level_vilao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Enemy Lvl 3"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/vilao"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/relative1"
        android:layout_below="@+id/relative1"
        android:src="@drawable/monstro2"/>
    <Button
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vilao"
        android:layout_alignStart="@+id/relative1"
        android:layout_marginStart="30dp"
        android:text="@string/play"
        android:background="@drawable/custom_button_jogo_3" />
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/play_btn"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">
            <ImageView
                android:id="@+id/tronco"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tronco"/>
            <ImageView
                android:id="@+id/boneco"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/boneco" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_jogo"
                android:text="Avatar level: 20"
                android:textAlignment="center"
                android:textColor="@color/colorBeje"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/avatar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button_jogo_2"
                android:text="Avatar`s name"
                android:textAlignment="center"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/arvore" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/prgresse1"
                style="@style/progresse"
                android:layout_width="288dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/prgresse2"
                android:layout_marginTop="51dp"
                android:background="@drawable/custom_progress_bar"
                android:progressTint="@color/colorVerde0" />

            <ProgressBar
                android:id="@+id/prgresse2"
                style="@style/progresse"
                android:layout_width="290dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="35dp"
                android:background="@drawable/custom_progress_bar"
                android:progressTint="@color/colorVerde0" />

            <ProgressBar
                android:id="@+id/prgresse3"
                style="@style/progresse"
                android:layout_width="291dp"
                android:layout_height="31dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/prgresse1"
                android:layout_marginBottom="53dp"
                android:background="@drawable/custom_progress_bar"
                android:progressTint="@color/colorVerde0" />

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>




</RelativeLayout>